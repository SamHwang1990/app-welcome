html
  font-size 125% // 20px % 16px, the minimum font-size is 12px in browser

body
  width 100%
  height 100%
  background #ffffff
  color #fff
  font-size 16px
  font-size 0.8rem
  font-family: Helvetica, Arial, sans-serif;
  text-rendering: optimizeLegibility;

.aw_hide
  display none !important

.aw_main
  width 100%
  height auto

.aw_hero
  width 100%
  height auto

#aw_footer
  clear both
  position relative
  width 100%
  padding 20px 0
  margin 20px auto 0 auto
  background-color #555
  text-align center
  p, a
    color #fff
    font-size 12px
    line-height 1.5
  a
    text-decoration none