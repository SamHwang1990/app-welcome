.aw_hero
  position relative
  .aw_hero_bg
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    overflow hidden
    background #fff

    img
      display block
      width 100%
      height 100%

.aw_page1_intro
  position relative
  display block
  padding 0
  margin 0
  width 100%
  height 100%

.aw_brand
  display block
  margin 0 auto
  padding 4% 0
  width 95%
  height auto
  .aw_brand_logo
  .aw_brand_statement
    text-align center

  .aw_brand_statement
    margin-top 10px
    margin-top .5rem
    font-size 16px
    font-size .8rem

.aw_aoDo
  display block
  margin 0 auto
  padding 2% 0
  width 95%
  height auto

  .aw_aoDo_list
    text-align center
    font-size 24px
    font-size 1.2rem

  .aw_aoDo_amount
  .aw_aoDo_name
    font-size 46px
    font-size 2.3rem

  .aw_aoDo_detail
    padding 14px 0 0 0
    padding .7rem 0 0 0
    text-align center
    font-size 18px
    font-size .9rem