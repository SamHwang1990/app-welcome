.aw_ao
  position relative
  width 100%
  height auto
  .aw_ao_wrap
    position relative
    width 100%
    height auto

.aw_ao_statement
  width 95%
  text-align center
  margin 0 auto 20px auto
  &:before
    content ''
    display block
    margin 20px auto
    margin 1rem auto
    width 75%
    border-bottom solid 1px #d2d2d2;
    text-align center

  h1
    font-size 30px
    color #4c4c4c
    &:after
      content ''
      display block
      margin 20px auto
      margin 1rem auto
      width 100px
      width 5rem
      border-bottom solid 1px #71bcce;
      text-align center
  p
    font-size 16px
    color #6f6f6f

.aw_ao_detail
  width 90%
  margin 20px auto
  margin 1rem auto
  box-shadow 0px 0px 5px 1px #ddd
.aw_ao_img
  display block
  width 100%
  height auto
.aw_ao_intro
  height 150px
  height 7.5rem
  padding 0 16px
  padding 0 .8rem
  background #6699cc
  color #fff
  overflow hidden
.aw_ao_name
  padding-top 10px
  padding-top .5rem
  margin-bottom 10px
  margin-bottom .5rem
  font-size 20px
  font-size 1rem
  font-weight normal
.aw_ao_experience
  h3
    font-size 14px
    font-size .7rem
    font-weight normal
    margin-bottom 6px
    margin-bottom .3rem
  p,ul
    font-size 12px
    font-size .6rem
    line-height 1.5

@media screen and (min-width: $screen-sm-min)
  .aw_ao
    .aw_ao_wrap
      width 90%
      margin 0 auto

@media screen and (min-width: $screen-xs-min) and (max-width: $screen-xs-max)
  .aw_ao_detail
    float left
    width 49%
    margin-top 16px
    margin-top .8rem
    margin-bottom 16px
    margin-bottom .8rem
    margin-right 2%
    &:nth-of-type(2n)
      margin-right 0

@media screen and (min-width: $screen-sm-min) and (max-width: $screen-sm-max)
  .aw_ao_detail
    float left
    width 32%
    margin-top 16px
    margin-top .8rem
    margin-bottom 16px
    margin-bottom .8rem
    margin-right 2%
    &:nth-of-type(3n)
      margin-right 0
    &:nth-of-type(n+7)
      display none

@media screen and (min-width: $screen-md-min) and (max-width: $screen-md-max)
  .aw_ao_detail
    float left
    width 23.8%
    margin-top 16px
    margin-top .8rem
    margin-bottom 16px
    margin-bottom .8rem
    margin-right 1.6%
    &:nth-of-type(4n)
      margin-right 0

@media screen and (min-width: $screen-lg-min)
  .aw_ao
    .aw_ao_wrap
      width 100%
      max-width 1440px
      max-width 72rem
      margin 0 auto
  .aw_ao_detail
    position relative
    float left
    width 20%
    margin-top 0
    margin-right 0
    margin-bottom 0
    box-shadow none

    &:nth-of-type(n+6)
      display none

    &:after
      position absolute
      content ''
      top 0
      right 0
      bottom 0
      left 0
      background-color #000
      opacity .3


    &:hover
      &:after
        content none
      .aw_ao_intro
        height 100%

  .aw_ao_intro
    display block
    position absolute
    padding 0
    bottom 0
    left 0
    height 0
    width 100%
    background-color rgba(99, 136, 198, .7)
    transition height .1s ease-in

  .aw_ao_name
  .aw_ao_experience
    padding-left 16px
    padding-right 16px
    padding-left .8rem
    padding-right .8rem
  .aw_ao_name
    margin-top 10px
    text-align center
